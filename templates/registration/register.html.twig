{% extends 'base.html.twig' %}

{% block title %}Création{% endblock %}

{% block body %}
    <h1 class="h3 my-5 font-weight-normal text-center">Création d'un compte</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.pseudo) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        <div class="text-center my-3">
            {{ form_row(registrationForm.agreeTerms) }}
        </div>

        <div class="text-center mb-5">
            <button type="submit" class="btn btn-lg btn-primary">Enregistrer</button>
        </div>

    {{ form_end(registrationForm) }}

        <p class="text-center">Vous avez déja un compte ? <a href="{{ path('app_login') }}">Connectez-vous !</a></p>

{% endblock %}
